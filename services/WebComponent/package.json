  "version": "0.1.0",
  "author": {
    "name": "iyulab",
    "url": "https://www.iyulab.com"
  },
  "license": "MIT",
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "publish": "npm publish"
